{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"strictNullChecks": true,
		"allowImportingTsExtensions": true,
		"baseUrl": "./",
		"allowJs": true,
		"paths": {
			"$/*": ["src/*"],
			"&/*": ["@types/*"],
			"@/*": [
				"src/assets/*"
			],
		},
		"moduleResolution": "node",
		"module": "ES2022",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"types": ["astro/env"]
	}
}