---
import type { OpenGraphArticle } from '&/page.d.ts'

export interface Props {
	og: OpenGraphArticle
}

const { og } = Astro.props as Props

const getISOstring = (date: string) => new Date(date).toISOString()
---

<!-- Link display - OpenGraph Article -->
<meta property="og:type" content="article" />
<meta property="og:article:published_time" content={getISOstring(og.published_time)} />
<meta property="og:article:modified_time" content={getISOstring(og.modified_time)} />

{og.author && (
	<meta property="og:article:author:username" content={og.author} />
)}

{og.tag.length && og.tag.map(tag => (
	<meta property="article:tag" content={tag} />
))}