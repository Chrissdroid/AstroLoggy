---
import Layout from '$/layouts/PageLayout.astro'
import HeaderAnchor from '$/components/HeaderAnchor.astro'

import { createI18n } from '$/scripts/i18n'
import Markdown from '@astrojs/markdown-component';

export const getStaticPaths = createI18n('contact')
const { translations, langs } = Astro.props
const { lang } = Astro.params as { [key: string]: string }

---

<Layout {translations} {langs} {lang} padding>
	<section id="index" data-role="heading">

		<h1>{translations.title}</h1>
		<Markdown content={translations.description} />

	</section>

	<section id="about">
		<section>
			<h2 id="form">
				{translations.form.title}
				<HeaderAnchor lang={lang} id="form" />
			</h2>

			<p>Form still under development, please wait</p>

			<form action="">
				<div class="form-group">
					<label for="name">{translations.form.name}</label>
					<input type="text" class="form-control" id="name" placeholder="Jhon Doe" disabled>
				</div>
				<div class="form-group">
					<label for="email">{translations.form.email}</label>
					<input type="email" class="form-control" id="email" placeholder="jhondoe@exemple.com" disabled>
				</div>
				<div class="form-group">
					<label for="message">{translations.form.message}</label>
					<textarea class="form-control" id="message" rows={3} disabled></textarea>
				</div>
				<button disabled type="submit" class="btn btn-primary">{translations.form.submit}</button>
			</form>
		</section>

		<aside>
			<h2 id="additionnal-methods-for-astro">
				{translations.other.title} (Alexis)
				<HeaderAnchor lang={lang} id="additionnal-methods-for-astro" />
			</h2>

			<dl>
				<dt><h3>{translations.other.email}</h3></dt>
				<dd><a href="mailto:alexis31.balthazard@gmail.com">alexis31.balthazard@gmail.com</a></dd>
				<dt><h3>{translations.other.tel}</h3></dt>
				<dd><a href="tel:+33781754040">(+33)7 81 75 40 40</a></dd>
				<dt><h3>{translations.other.discord}</h3></dt>
				<dd>ΛstroΛlex#7538</dd>
				<dt><h3>{translations.other.telegram}</h3></dt>
				<dd><a href="//t.me/astroalex_404" target="_blank">@Astroalex_404</a></dd>
			</dl>
		</aside>

		<aside>
			<h2 id="additionnal-methods-for-loggy">
				{translations.other.title} (Logan)
				<HeaderAnchor lang={lang} id="additionnal-methods-for-loggy" />
			</h2>

			<dl>
				<dt><h3>{translations.other.email}</h3></dt>
				<dd><a href="mailto:###">###@gmail.com</a></dd>
				<dt><h3>{translations.other.tel}</h3></dt>
				<dd><a href="tel:###">###</a></dd>
				<dt><h3>{translations.other.discord}</h3></dt>
				<dd>Nova#9920</dd>
				<dt><h3>{translations.other.telegram}</h3></dt>
				<dd><a href="//t.me/brain_derv" target="_blank">@Brain_Derv</a></dd>
			</dl>
		</aside>
	</section>
</Layout>

<style lang="scss">

	:global(main) {
		padding-bottom: 5em;
	}

	#index {
		--min: 1rem;
		--average: 1rem;
		--max: 1rem;
	}

	#about {
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: flex-start;
		flex-wrap: wrap;
		gap: 2rem;

		padding: 6rem 2rem;
		border-top: 3px solid var(--active-200);

		> section {
			flex: 0 0 clamp(18em, 45%, 35em);
		}

		> aside {
			flex: 0 0 16em;
			background-color: var(--body-accent);
			padding: 1.5rem;
			border-radius: 1.5em;
			font-size: 90%;
			box-shadow: 0 0.5rem 1rem hsla(0, 0%, 0%, 0.2);

			dl {
				display: flex;
				flex-direction: column;
				gap: 1rem;

				h3 {
					margin: 0;
				}
			}
		}
	}

	form {
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		align-items: flex-start;
		gap: 1rem;

		.form-group {
			display: flex;
			flex-direction: column;
			justify-content: flex-start;
			align-items: stretch;

			label {
				font-size: 90%;
				margin-bottom: 0.5rem;
				cursor: pointer;
			}

			input, textarea {
				min-width: 18rem;
				min-height: 2.9rem;
				font-size: 100%;
				border: 1px solid var(--active-200);
				border-radius: 0.5rem;
				padding: 0.5rem;
				resize: vertical;
			}
		}
	}

</style>